@{
    ViewData["Title"] = "Home Page";
}
    <div class="form-group row">
        <div class="col">
            <label for="name">Name: </label>
            <input class="form-control" id="name" placeholder="name of employee" type="text" />
        </div>

        <div class="col">
            <label for="beginDate">Hired after: </label>
            <div id="flatpickBegin" class="input-group">
                <input id="beginDate" class="form-control" type="text" placeholder="Select Date.." data-input>
                <div class="input-group-append">
                    <button type="button" class="close" aria-label="Clear" data-clear>
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

            </div>
        </div>
        <div class="col">
            <label for="endDate">Hired before: </label>
            <div id="flatpickEnd" class="input-group">
                <input id="endDate" class="form-control" type="text" placeholder="Select Date.." data-input>
                <div class="input-group-append">
                    <button type="button" class="close" aria-label="Clear" data-clear>
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

            </div>
        </div>
        <div class="col">
            <label for="performanceManager">Performance Manager: </label>
            <select id="performanceManager" class="form-control">
            </select>
        </div>


    </div>
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Name</th>
                <th>Hire Date</th>
                <th>Performance Manager</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/employeeTable.js" ~></script>
}
