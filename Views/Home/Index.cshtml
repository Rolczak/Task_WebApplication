@{
    ViewData["Title"] = "Home Page";
}
    <div class="form-group row">
        <div class="col">
            <label for="name">Name: </label>
            <input class="form-control" id="name" placeholder="name of employee" type="text" />
        </div>

        <div class="col">
            <label for="beginDate">Hired after: </label>
            <input id="beginDate" type="text" class="form-control"
                   placeholder="date" data-id="datetime" />
        </div>
        <div class="col">
            <label for="endDate">Hired before: </label>
            <input id="endDate" type="text" class="form-control"
                   placeholder="date" data-id="datetime" />
        </div>
        <div class="col">
            <label for="performanceManager">Performance Manager: </label>
            <select id="performanceManager" class="form-control">

            </select>
        </div>

        
    </div>
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Name</th>
                <th>Hire Date</th>
                <th>Performance Manager</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/employeeTable.js" ~></script>
}
